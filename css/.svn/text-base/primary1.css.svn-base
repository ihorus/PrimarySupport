/* for Chris */
.hero-unit {
  padding: 60px;
  margin-bottom: 30px;
  background-color: #eeeeee;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  
  background-image: url(../images/hero-header.png);
  background-position: right;
  background-repeat: no-repeat; 
}

